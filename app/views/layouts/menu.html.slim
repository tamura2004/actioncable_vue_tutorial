doctype html
html lang="ja"
  head
    meta charset="utf-8"
    meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1"
    meta name="viewport" content="width=device-width, initial-scale=1.0"
    title= content_for?(:title) ? yield(:title) : "ActionCableChatTutorial"
    = csrf_meta_tags

    = stylesheet_link_tag "application", :media => "all"
    = stylesheet_link_tag "https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css", :media => "all"

    = javascript_include_tag "application"
    = javascript_include_tag "http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"

    = include_gon

  body#body
    = yield